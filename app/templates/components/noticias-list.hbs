{{yield}}
<div class="row isogrid">
  <div class="grid-sizer"></div>
{{#each model as |noticia|}}
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 isoitem">
    <div class="thumbnail">
      {{#link-to "noticia" noticia}}
        <img src="{{noticia.thumbnail}}" alt="...">
      {{/link-to}}
        <div class="caption">
          <h3 class="text-left">{{noticia.title}}</h3>
          {{#link-to "noticia" noticia}}
            {{#if noticia.excerpt}}
              <small class="text-left">{{{substr noticia.excerpt size=12}}}</small>
            {{/if}}
          {{/link-to}}
        </div>       
      {{#each noticia.tags as |value|}}
        <span>{{link-to value.title "tag" value.slug}}</span>
      {{/each}}
    </div>
  </div>
{{/each}}
</div>
{{#if page}}
<div class="row">
  <div class="col-lg-12">
    {{noticias-pages current=page total=model.meta.pages}}    
  </div>
</div>
{{/if}}